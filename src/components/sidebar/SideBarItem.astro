---
interface Props {
  href?: string;
}

const { href } = Astro.props;
---

<li>
  <a
    class="w-full flex items-center gap-x-3.5 py-2 px-2.5 text-sm text-gray-400 rounded-lg hover:bg-gray-800 hover:text-white-300 focus:outline-none focus:ring-1 focus:ring-gray-600 cursor-pointer"
    href={href}
  >
    <slot />
  </a>
</li>
